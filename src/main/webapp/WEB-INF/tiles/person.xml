<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
		"-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
		"http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>
	
	<!-- Create person form -->
	<definition name="createPersonFormTile" template="/WEB-INF/jsp/person/form/personForm.jsp">
		<put-attribute name="formMethod" value="post" />
		<put-attribute name="instructionsCode" value="content.createPersonForm.instructions" />
		<put-attribute name="submitPath" value="/people" />
		<put-attribute name="cancelPath" value="/people?a=cancelled" />
	</definition>
	<definition name="createPersonForm" extends="pageTemplate">
		<put-attribute name="title" value="Create new person" />
		<put-attribute name="titleBar" value="/WEB-INF/jsp/person/form/createPersonFormTitleBar.jsp" />
		<put-attribute name="content" value="createPersonFormTile" />
	</definition>
	
	<!-- Person list -->
	<definition name="personList" extends="pageTemplate">
		<put-attribute name="title" value="People" />
		<put-attribute name="titleBar" value="/WEB-INF/jsp/person/list/personListTitleBar.jsp" />
		<put-attribute name="content" value="/WEB-INF/jsp/person/list/personList.jsp" />
	</definition>
	
	<!-- Person details -->
	<definition name="personDetails" extends="pageTemplate">
		<put-attribute name="title" expression="${person.firstNameLastName}" />
		<put-attribute name="titleBar" value="/WEB-INF/jsp/person/details/personDetailsTitleBar.jsp" />
		<put-attribute name="content" value="/WEB-INF/jsp/person/details/personDetails.jsp" />
	</definition>

	<!-- Edit person form -->
	<definition name="editPersonFormTile" template="/WEB-INF/jsp/person/form/personForm.jsp">
		<put-attribute name="formMethod" value="put" />
		<put-attribute name="instructionsCode" value="content.editPersonForm.instructions" />
		<put-attribute name="submitPath" expression="/people/${person.id}" />
		<put-attribute name="cancelPath" expression="/people/${person.id}?a=cancelled" />
	</definition>
	<definition name="editPersonForm" extends="pageTemplate">
		<put-attribute name="title" value="Edit person" />
		<put-attribute name="titleBar" value="/WEB-INF/jsp/person/form/editPersonFormTitleBar.jsp" />
		<put-attribute name="content" value="editPersonFormTile" />
	</definition>
</tiles-definitions>
